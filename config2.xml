<?xml version="1.0" encoding="utf-8"?>
<widget id="mk.clicaid.app" version="1.8" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Clicaid Prozakon</name>
    <description>
      С нами Ваша жизнь будет в безопасности
    </description>
    <author email="info@clicaid.ru" href="http://clicaid.ru">
        Clicaid
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <preference name="orientation" value="portrait" />
    <preference name="loadUrlTimeoutValue" value="50000" />
    <preference name="SplashSnowOnlyFirstTime" value="false" />
<access origin="https://clicaid.ru/*" />
<access origin="https://maps.googleapis.com/maps/api/*" />
<access origin="https://maps.googleapis.com/*" />
<access origin="https://*.google.com/*" />
<access origin="https://*.googleapis.com/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="xxhdpi.png" />
        <icon density="ldpi" src="ldpi.png" />
        <icon density="mdpi" src="mdpi.png" />
        <icon density="hdpi" src="hdpi.png" />
        <icon density="xhdpi" src="xhdpi.png" />
        <icon density="xxhdpi" src="xxhdpi.png" />
        <icon density="xxxhdpi" src="xxxhdpi.png" />
        <preference name="AndroidXEnabled" value="true" />
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="splash-port-hdpi.png" />
        <preference name="AndroidWindowSplashScreenBackground" value="#ffffff" />
        <preference name="SplashScreenDelay" value="1000" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="FadeSplashScreen" value="true" />
        <preference name="FadeSplashScreenDuration" value="2000" />
    </platform>
    <plugin name="cordova-plugin-network-information" spec="^2.0.2" />
    <plugin name="cordova-plugin-geolocation" spec="^4.1.0">
        <variable name="GPS_REQUIRED" value="true" />
    </plugin>
    <engine name="browser" />
    <engine name="android" />
	<engine name="ios" spec="7.1.1 />
    <preference name="android-minSdkVersion" value="24" />
    <preference name="android-targetSdkVersion" value="33" />
    <preference name="android-compileSdkVersion" value="33" />
    <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application/activity" xmlns:android="http://schemas.android.com/apk/res/android">
        <activity android:exported="true" />
    </edit-config>
</widget>
